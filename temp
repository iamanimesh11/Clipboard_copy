import time
import tkinter as tk
from tkinter import messagebox

def show_reminder():
    """Show a popup reminder to take a break."""
    root = tk.Tk()
    root.withdraw()  # Hide the root window
    messagebox.showinfo("20-20-20 Rule", "Time to take a break!\nLook at something 20 feet away for 20 seconds.")
    root.destroy()  # Destroy the root window after showing the popup

def start_timer():
    """Start the 20-minute timer."""
    try:
        while True:
            # Wait for 20 minutes (1200 seconds)
            time.sleep(1200)
            # Show the reminder
            show_reminder()
    except KeyboardInterrupt:
        print("\nProgram stopped by user.")

if __name__ == "__main__":
    print("20-20-20 Rule Reminder is running.")
    print("Press Ctrl+C to stop.")
    start_timer()