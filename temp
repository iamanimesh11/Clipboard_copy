' Apply conditional formatting for '% Preventive Maintenance Delay Ratio Target: 0%' column
        If col.ColumnName.contains("Preventive Ratio") Then
            ' Attempt to parse the cell value as a decimal
            Dim percentageValue As Decimal
            ' Remove "%" and any leading/trailing whitespace before parsing
            Dim cleanedCellValue As String = cellValue.Replace("%", "").Trim()

            If Decimal.TryParse(cleanedCellValue, percentageValue) Then
                If percentageValue > 0.0D Then
                    cellClass &= " cell-yellow  cell-center" 
               
                End If
            Else
				
                ' Handle cases where the cell value isn't a valid number (e.g., set a default class or log an error)
                ' For now, we'll just not apply any specific color class if parsing fails
            End If
			cellClass &= "cell-center" ' Apply red background class
        End If
		If isnumeric(cellValue) Then
 cellClass &= "cell-center " ' Apply red background class
End If        
        sb.Append("<td class='" & cellClass & "'>" & cellValue & "</td>")
    Next

    sb.Append("</tr>")
    rowIndex += 1
Next
