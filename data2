Sub ApplyBlankFilter(wsName As String, filterColumn As Long)
    Dim ws As Worksheet
    
    On Error Resume Next
    Set ws = ThisWorkbook.Sheets(wsName)
    On Error GoTo 0
    
    If ws Is Nothing Then Exit Sub
    
    If Not ws.AutoFilterMode Then
        ws.Range("A1").AutoFilter
    End If
    
    ws.AutoFilter.Range.AutoFilter Field:=filterColumn, Criteria1:="="
End Sub
