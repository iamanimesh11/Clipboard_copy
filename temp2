Sub FilterPivotGreaterThanZero()

    Dim ws As Worksheet
    Dim pt As PivotTable
    Dim pf As PivotField
    
    '--- Change sheet name & pivot table name as needed ---
    Set ws = ThisWorkbook.Sheets("Sheet1")
    Set pt = ws.PivotTables("PivotTable1")
    
    '--- Change this to the VALUE field you want to filter ---
    Set pf = pt.DataFields("Sum of Available")
    
    'Apply value filter (> 0)
    pf.Parent.PivotFields(pf.Name).ClearAllFilters
    pf.Parent.PivotFields(pf.Name).PivotFilters.Add _
        Type:=xlValueIsGreaterThan, _
        DataField:=pf, _
        Value1:=0

    MsgBox "Filter applied: Sum of Available > 0"

End Sub